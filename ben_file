def steps_to_miles(steps):
    try:
        steps = int(steps) 
    except ValueError:
        raise ValueError("Exception: Non-numeric value entered.") 

    if steps < 0:
        raise ValueError("Exception: Negative step count entered.") 
    miles = steps / 2000
    return miles

def main():
    try:
        steps = input("Please enter # of steps: ")
        miles_walked = steps_to_miles(steps)
        print(f"{miles_walked:.2f} miles")
    except ValueError as e:
        print(e)

main()
